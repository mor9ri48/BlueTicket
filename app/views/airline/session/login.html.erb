<% @page_title = "航空会社ログイン" %>
<h1><%= @page_title %></h1>

<% if flash.alert %><p><%= flash.alert %></p><% end %>
<%= form_tag [:airline, :session] do %>
  <div>
    <label>航空会社名：</label>
    <input type="text" name="login_name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>