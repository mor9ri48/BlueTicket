<% @page_title = "お客様ログイン" %>
<h1><%= @page_title %></h1>

<% if flash.alert %><p><%= flash.alert %></p><% end %>
<%= form_tag :session do %>
  <div>
    <label>ログイン名：</label>
    <input type="text" name="login_name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>

<p><%= link_to "新規会員登録はこちら", :new_customer %></p>